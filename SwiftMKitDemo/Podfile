source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '9.0'

# ignore all warnings from all pods
inhibit_all_warnings!

use_frameworks!

def pods
#    pod 'SwiftMKit_Demo', '~> 1.1.5.3'

    pod 'Charts', '~> 3.1.0'
    pod 'PulsingHalo', '~> 0.2.0'
    pod 'FDFullscreenPopGesture', '~> 1.1'
    pod 'AudioKit', '~> 4.3.0'
end

target 'SwiftMKitDemo' do
    pods
end

target 'SwiftMKitDemoTests' do
    pods
end

target 'SwiftMKitDemoUITests' do
    pods
end

target 'SwiftMKit' do
    pod  'CocoaLumberjack/Swift', '~> 3.4.0'
    pod  'ReactiveCocoa', '~> 7.2.0'
    pod  'Alamofire', '~> 4.7.0'
    pod  'Kingfisher', '~> 4.8.0'
    pod  'MagicalRecord', '~> 2.3.0'
    pod  'MJExtension', '~> 3.0.0'
    pod  'MJRefresh', '~> 3.1.0'
    pod  'CryptoSwift', '~> 0.10.0'
    pod  'IQKeyboardManager', '~> 6.0.0'
    pod  'WebViewJavascriptBridge', '~> 6.0.0'
    pod  'PINCache', '~> 2.3.0'
    pod  'SnapKit', '~> 4.0.0'
    pod  'pop', '~> 1.0.0'
    pod  'Aspects', '~> 1.4.0'
    pod  'MBProgressHUD', '~> 1.1.0'
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['SWIFT_VERSION'] = '4.1'
    end
  end
end
