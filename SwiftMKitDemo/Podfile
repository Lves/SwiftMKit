source 'https://github.com/CocoaPods/Specs.git'

link_with 'SwiftMKitDemoTests', 'SwiftMKitDemoUITests'  

platform :ios, '8.0'

use_frameworks!

def testing_pods
    pod 'Quick'
    pod 'Nimble'
end

pod 'CocoaLumberjack/Swift'
pod 'ReactiveCocoa'
pod 'Alamofire'
pod 'ReachabilitySwift'
pod 'MagicalRecord'
pod 'MagicalRecord/CocoaLumberjack'
pod 'MJExtension'
pod 'MJRefresh'
pod 'EZSwiftExtensions'
pod 'JSPatch'
pod 'IQKeyboardManager'
pod 'WebViewJavascriptBridge'
pod 'PINCache'
pod 'SnapKit'
pod 'HanekeSwift'
pod 'MBProgressHUD'

target 'SwiftMKitDemoTests' do
    testing_pods
end

target 'SwiftMKitDemoUITests' do
    testing_pods
end